ORIG_PN="dejavu-fonts"
inherit font

DESCRIPTION="DejaVu font family"
HOMEPAGE="http://dejavu.sourceforge.net/"
SRC_URI="mirror://sourceforge/dejavu/${ORIG_PN}-${PV}.tar.bz2"

DEPEND="fontforge
	perl(Font::TTF::Font)"

src_compile() {
	lndirs
	cd ${B}
	cygmake full-ttf
}

src_install() {
	cd ${B}
	insinto /etc/fonts/conf.d
	doins fontconfig/*-dejavu-s*.conf

	fontinto TTF
	dofont build/*.ttf

	dodoc *.txt
}
